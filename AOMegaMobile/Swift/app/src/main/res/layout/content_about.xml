<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87e15e"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="swiftproduct.swift.About"
    tools:showIn="@layout/activity_about">

    <LinearLayout
        android:id="@+id/HeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ReturntoMain_About"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100sp"
            android:layout_height="35sp"
            android:background="#5fb04d"
            android:gravity="top"
            android:text="@string/Return"
            android:textAlignment="center"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/About_this_app"
            android:id="@+id/Door_Locks"
            android:textSize="40sp"
            android:clickable="false"
            android:gravity="center"/>

    </LinearLayout>

    <View
        android:id="@+id/AboutBackground"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/HeaderLayout"
        android:background="@android:color/black" />

    <ScrollView
        android:id="@+id/About_Scroll_View"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/AboutBackground"
        android:background="#87e15e"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Josh_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/josh"
                android:padding="1dp"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/Josh_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="left"
                android:text="@string/Bio_default"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp"
                android:padding="1dp"/>

            <ImageButton
                android:id="@+id/Todd_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/todd"
                android:layout_gravity="center_horizontal"
                android:padding="1dp"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/Todd_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="left"
                android:text="@string/Bio_default"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp"
                android:padding="1dp"/>

            <ImageView
                android:id="@+id/Sean_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:contentDescription="@string/Picture"
                android:src="@drawable/sean"
                android:padding="1dp"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/Sean_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="left"
                android:text="@string/Bio_default"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp"
                android:padding="1dp"/>

            <ImageView
                android:id="@+id/Charles_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/charles"
                android:padding="1dp"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/Charles_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="left"
                android:text="@string/Bio_default"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp"
                android:padding="1dp"/>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
