<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Alert"
    tools:showIn="@layout/activity_alert"
    android:background="#87e15e">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/HeaderLayout"
        android:orientation="horizontal">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="@string/Return"
            android:textAlignment="center"
            android:textSize="20sp"
            android:id="@+id/ReturntoMain_Alert"
            android:gravity="start"
            android:background="#5fb04d" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/title_activity_alert"
            android:id="@+id/Edit_Products"
            android:textSize="40sp"
            android:clickable="false"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:id="@+id/Edit_ProductsBackground"
        android:background="@android:color/black"
        android:layout_below="@+id/HeaderLayout"/>
    <ImageView
        android:layout_width="8100dp"
        android:layout_height="350dp"
        android:id="@+id/AlertPicture"
        android:src="@drawable/logo"
        android:scaleType="fitXY"
        android:gravity="center"
        android:background="#87e15e"
        android:contentDescription="@string/app_name"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/Edit_ProductsBackground"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Alert_Text"
        android:textColor="#ea0b0b"
        android:id="@+id/AlertText"
        android:layout_below="@+id/AlertPicture"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:scaleType="fitXY"
        android:gravity="center"
        android:layout_below="@+id/AlertText" />

</RelativeLayout>
